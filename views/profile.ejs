<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('partials/head.ejs') %>
  </head>
  <body>
    <%- include('partials/body.ejs') %>

    <section class="vh-100" style="background-color: #e2d5de">
      <div class="container py-5 h-100">
        <div style="padding-top: 200px">
          <form class="form-inline" action="/users/newList" method="POST">
            <div class="form-group mx-sm-3 mb-2">
              <label for="inputPassword2" class="sr-only"></label>
              <input
                type="text"
                class="form-control"
                id="inputPassword2"
                placeholder="List Name"
                name="newListName"
              />
            </div>
            <button type="submit" class="btn btn-primary mb-2">
              Create New List
            </button>
          </form>
        </div>

        <% userLists.forEach(list=>{ %>

        <div class="row d-flex justify-content-center align-items-center">
          <div class="col col-xl-10">
            <div class="card" style="border-radius: 15px">
              <div class="card-body p-5">
                <h6 class="mb-3"><%= list.listTitle%></h6>
                <form
                  class="d-flex justify-content-center align-items-center mb-4"
                >
                  <div class="form-outline flex-fill">
                    <input
                      type="text"
                      id="form3"
                      class="form-control form-control-lg"
                      name="<%= userLists.indexOf(list)%>"
                    />
                    <label class="form-label" for="form3">Tasks</label>
                  </div>

                  <button
                    type="submit"
                    class="btn btn-primary btn-lg ms-2"
                    id="<%= list._id%>"
                    name="<%= list.listTitle%>"
                    onClick="routeToNewTask(this.id, this.name)"
                  >
                    Add new task
                  </button>
                </form>
                <ul class="list-group mb-0">
                  <% list.tasks.forEach(task=>{ %>
                  <li
                    class="list-group-item d-flex justify-content-between align-items-center border-start-0 border-top-0 border-end-0 border-bottom rounded-0 mb-2"
                  >
                    <div class="d-flex align-items-center">
                      <input
                        class="form-check-input me-2"
                        type="checkbox"
                        value="Add List"
                        aria-label="..."
                      />
                    </div>
                    <a href="#!" data-mdb-toggle="tooltip" title="Remove item">
                      <i class="fas fa-times text-primary"></i>
                    </a>
                    <%= task %>
                  </li>
                  <% }) %>
                </ul>
              </div>
            </div>
          </div>
        </div>
        <% }) %>
      </div>
    </section>
  </body>
  <footer><%- include('partials/footer.ejs') %></footer>

  <script type="text/javascript">
    function routeToNewTask(clicked_id, water) {
      fetch(`/users/newTask/${clicked_id}/${water}`, { method: "PATCH" });
    }
  </script>
</html>
